{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nginx Web Server",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "The repository of the Nginx image."
        },
        "tag": {
          "type": "string",
          "description": "The tag of the Nginx image."
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the service.",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
        },
        "port": {
          "type": "integer",
          "description": "The port of the service."
        }
      }
    }
  }
}
